<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_activity_app_name"
        android:text="HOW TO COOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"
        android:textSize="70px"/>

    <TextView
        android:id="@+id/main_activity_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qu'allez vous manger aujourd'hui ?"
        android:textSize="100px"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_app_name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/main_activity_search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_greeting"
        android:layout_marginTop="70dp"
        android:layout_marginHorizontal="30dp"/>

    <Button
        android:id="@+id/activity_name_search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_search_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:text="Search"
        android:textSize="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>